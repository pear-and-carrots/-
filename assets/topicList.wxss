.bigBox{
  padding: 3%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}

.bigBox .box{
  /* box-shadow: 1rpx 1rpx 1rpx 1rpx #666666; */
  border-bottom: 1rpx solid #666666;
  height: 365rpx;
  margin: 2%;
  width: 45%;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}

.bigBox .box image{
  background-color: darkgrey;
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
}

.bigBox .box .title{
  font-weight: 650;
  font-size: 28rpx;
  height: 40rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.bigBox .box .userBox{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  font-weight: 600;
  color: rgb(75, 73, 73);
  width: 95%;
  margin-top: -15rpx;
  margin-bottom: -15rpx;
}

.bigBox .box .userBox image{
  margin-right: 15rpx;
  background-color: darkgrey;
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
}

.bigBox .box .dec{
  font-size: 26rpx;
  color: #666666;
  height: 40rpx;
  margin-left: 10rpx;
  width: 95%;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}


