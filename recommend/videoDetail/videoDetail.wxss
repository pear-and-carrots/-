.userBox {
  display: flex;
  flex-direction: row;
  width: 100%;
  padding: 5%;
}

.userBox image {
  border-radius: 100%;
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
}

.userBox .userDetail {
  display: flex;
  flex-direction: column;
  width: 45%;
}

.userBox .userDetail .userName {
  font-size: 30rpx;
  font-weight: 660;
  margin-bottom: 10rpx;
}

.userBox .userDetail .time {
  font-size: 26rpx;
  color: #666666;
}

.userBox .toolBox {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userBox .toolBox .focus {
  border: 2rpx solid #F78E1F;
  height: 50rpx;
  line-height: 50rpx;
  color: #F78E1F;
  font-size: 30rpx;
  border-radius: 50rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  margin-right: 30rpx;
}

.userBox .toolBox .alreadyFocus {
  border: 2rpx solid #530e8b;
  height: 50rpx;
  line-height: 50rpx;
  color: #530e8b;
  font-size: 30rpx;
  border-radius: 50rpx;
  padding-left: 18rpx;
  padding-right: 18rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  margin-right: 30rpx;
}

.userBox .toolBox image {
  width: 50rpx;
  height: 50rpx;
}

