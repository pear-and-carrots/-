.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.9;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */
.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  border-top: 20rpx solid rgb(180, 159, 221);
  border-top-right-radius: 70rpx;
  border-top-left-radius: 70rpx;
}
.dialog_content {
  display: flex;
  flex-direction: column;
  font-weight: 600;
  padding-bottom: 30rpx;
}

.title{
  font-size: 30rpx;
  margin-top: 30rpx;
  margin-left: 60rpx;
  letter-spacing: 3rpx;
}

.message{
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eeeeee;
}

.message image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 25rpx;
}

.item{
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

