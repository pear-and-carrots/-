/* 落花 */
.fllowerbox{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.container {
  height: 100%;
  box-sizing: border-box;
  min-height: 100vh;
}

image {
  width: 100%;
  display: block;
  margin-top: -2rpx;
}

canvas {
  width: 100%;
  min-height: 100vh;
  position: fixed;
  top: 0;
  z-index: 888;
}

/* 落花 */
.TopBox {
  position: relative;
  height: 400rpx;
  margin-bottom: -350rpx;
  padding: 5%;
  width: 100%;
  opacity: 0.8;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: url("https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fi0.hdslb.com%2Fbfs%2Farchive%2F8e526a633ac7534cf469eddb83a172f34af329e2.png&refer=http%3A%2F%2Fi0.hdslb.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1636293739&t=560c041331d152d6793e2d664c67f59e");
