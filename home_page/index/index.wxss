page{
  background-color: #CCDDFF;
}

.swiper {
  width: 100%;
  height: 1500rpx;
}

.swiperItem {
  width: 100%;
  height: 700rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.swiperItem .title{
  color: #fff;
  font-size: 32rpx;
  font-weight: 800;
}

.swiperItem .box{
  width: 600rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}


.swiperItem .box .genderBox {
  margin: 10%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.swiperItem .box .genderBox image {
  width: 250rpx;
  height: 250rpx;
  border-radius: 100%;
}

.swiperItem .box .genderBox .name{
  margin: 30rpx;
  width: 40rpx;
  height: 40rpx;
  padding: 25rpx;
  font-size: 40rpx;
  font-weight: 800;
  color: #fff;
  background: rgb(190, 184, 184);
  border-radius: 100%;
  text-align: center;
  line-height: 40rpx;
}

.swiperItem .box .genderBox .nameactive{
  margin: 30rpx;
  width: 40rpx;
  height: 40rpx;
  padding: 25rpx;
  font-size: 40rpx;
  font-weight: 800;
  color: rgb(190, 184, 184);
  background: #fff;
  border-radius: 100%;
  text-align: center;
  line-height: 40rpx;
}

/* 十二星座 */
.swiperItem .constellationBox{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.swiperItem .constellationBox .constellation{
  border-radius: 20rpx;
  border:3rpx solid #fff;
  background-color: rgb(205, 221, 255);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-weight: 550;
  margin: 20rpx;
}

.swiperItem .constellationBox .constellationactive{
  border-radius: 20rpx;
  border:3rpx solid rgb(93, 62, 110);
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-weight: 550;
  margin: 20rpx;
}

.swiperItem .constellationBox image{
  background-color: black;
  border-radius: 100%;
  width: 100rpx;
  height: 100rpx;
}

.swiperItem .constellationBox .name{
  margin: 20rpx;
}

.birthBox{
  /* margin-top: -500rpx; */
}

.picker{
  padding: 30rpx;
  border: 1rpx solid #ffffff;
  font-size: 50rpx;
  font-weight: 800;
  color: #fff;
}

/* 选择方向 */
.swiperItem .InterestBox{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.swiperItem .InterestBox .Interest{
  background-color: rgb(243, 237, 248);
  border: 1rpx solid #7e708f;
  font-size: 28rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-right: 30rpx;
  padding-left: 30rpx;
  margin:20rpx;
  border-radius: 30rpx;
}

.swiperItem .InterestBox .Interestactive{
  background-color: rgb(136, 102, 146);
  border: 1rpx solid #9f8fb9;
  color: #fff;
  font-size: 28rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-right: 30rpx;
  padding-left: 30rpx;
  margin:20rpx;
  border: 1rpx solid #ffffff;
  border-radius: 30rpx;
}

.swiperItem .button{
  width: 300rpx;
  border-radius: 50rpx;
  background: rgb(96, 5, 99);
  color: #fff;
  margin-top: 130rpx;
}